generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rifa {
  id              String   @id @default(cuid())
  name            String
  description     String
  reward          String
  numbersQuantity Int
  price           Float
  startedAt       DateTime
  status          String
  picture         String
  winnerId        String?

  purchaseadNumbers PurchasedNumbers[]
  participants      Participant[]
  Choosen           Choosen?
}

model Choosen {
  id            String   @id @default(cuid())
  participantId String
  raffleId      String   @unique
  drawnNumber  String   @unique
  sortedAt      DateTime

  raffle Rifa              @relation(fields: [raffleId], references: [id])
  winner Participant       @relation(fields: [participantId], references: [id])
}

model PurchasedNumbers {
  id            String   @id @default(cuid())
  rifaId        String
  participantId String?  @unique
  numbers       String[] @unique

  participant Participant? @relation(fields: [participantId], references: [id])
  Rifa        Rifa         @relation(fields: [rifaId], references: [id])
}

model Participant {
  id        String  @id @default(cuid())
  googleId  String  @unique
  name      String
  email     String  @unique
  phone     String
  avatarUrl String?
  cpf       String  @unique

  winner           Choosen[]
  Payment          Payment[]
  purchasedNumbers PurchasedNumbers?
  participatingAt  Rifa[]
}

model Payment {
  id                 String   @id @default(cuid())
  paymentId          String   @unique
  status             String
  amount             Float
  currency           String
  paymentMethod      String
  createdAt          DateTime @default(now())
  participantId      String
  external_reference String   @unique

  participant Participant @relation(fields: [participantId], references: [id])
}
